<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">

    <div class="col-lg-3">

<h2 class="pl-3">User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <table>
    <tr>
      <th>name</th><td><%= @user.name %></td>
    </tr>
    <tr>
      <th>introduction</th><td><%= @user.introduction %></td>
    </tr>
  </table>

  <button type="button" class="btn btn-outline-secondary mt-3 btn-block">
  <%= link_to edit_user_path(@user) do %>
    <%= icon('fas','tools') %> 
  <% end %>
  </button>

<h2 class="pl-3 pt-4">New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error") %> :</h3>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>
  <h6>Title</h6>
  <%= f.text_field :title, class: "btn-block" %>
  <h6 class="pt-2">Opinion</h6>
  <%= f.text_area :body, class: "btn-block" %><br><br>
  <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
<% end %>

      </div>

      <div class="col-lg-9">

<h2>Books</h2>
<table class="table table-hover">
<thead>
<tr>
  <th></th><th>Title</th><th>Body</th>
</tr>
</thead>
<% @books.each do |book| %>
<tr>
  <td>
    <%= link_to user_path(book.user) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
    <% end %>
  </td>
  <td><%= link_to book.title, book_path(book) %></td>
  <td><%= book.body %></td>
</tr>
<% end %>

</table>

    </div>

  </div>
</div>